<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutGrey"
    android:layoutDirection="ltr"
    tools:context=".views.ConfirmCodeActivity">

    <Button
        android:id="@+id/btn_confirm_code_back"
        android:layout_width="8dp"
        android:layout_height="14dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_confirm_code_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/vazir_bold"
        android:text="ورود کد"
        android:textColor="@color/navyBlue"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_confirm_code_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/vazir_regular"
        android:text="کد پیامک شده را وارد کنید"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_code_header" />

    <EditText
        android:id="@+id/et_confirm_code_second"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/bg_et_register_code"
        android:fontFamily="@font/vazir_regular"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_code_instruction" />


    <EditText
        android:id="@+id/et_confirm_code_third"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_et_register_code"
        android:fontFamily="@font/vazir_regular"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_code_instruction" />

    <EditText
        android:id="@+id/et_confirm_code_first"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_et_register_code"
        android:fontFamily="@font/vazir_regular"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@id/et_confirm_code_second"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_code_instruction" />

    <EditText
        android:id="@+id/et_confirm_code_fourth"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_et_register_code"
        android:fontFamily="@font/vazir_regular"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@id/et_confirm_code_third"
        app:layout_constraintTop_toBottomOf="@id/tv_confirm_code_instruction" />

    <Button
        android:id="@+id/btn_submit_confirm_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/bg_send_code_btn"
        android:fontFamily="@font/vazir_regular"
        android:text="ارسال مجدد کد"
        android:textColor="@color/ignoreRed"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_code_first" />

</androidx.constraintlayout.widget.ConstraintLayout>