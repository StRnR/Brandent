<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutGrey"
    android:layoutDirection="ltr"
    tools:context=".views.IntroActivity">

    <ImageView
        android:id="@+id/iv_illustration_intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/ic_intro"
        app:layout_constraintDimensionRatio="1:1.125"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_header_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/vazir_bold"
        android:text="خوش آمدید"
        android:textColor="@color/clinitickPurple"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_illustration_intro" />

    <TextView
        android:id="@+id/tv_instruction_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/vazir_regular"
        android:gravity="right"
        android:text="هدف ما: آسوده کردن زندگی کاری دندان پزشکان."
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_intro" />

    <EditText
        android:id="@+id/et_phone_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_et_rounded_rectangle"
        android:fontFamily="@font/vazir_regular"
        android:gravity="right"
        android:hint="شماره موبایل"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintGrey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_instruction_intro" />

    <EditText
        android:id="@+id/et_password_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_et_rounded_rectangle"
        android:fontFamily="@font/vazir_regular"
        android:gravity="right"
        android:hint="رمز عبور"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hintGrey"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_phone_intro" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_intro_forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@color/transparent"
        android:fontFamily="@font/vazir_regular"
        android:elevation="@null"
        android:text="فراموشی رمز؟"
        android:textColor="@color/clinitickPurple"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/et_password_intro"
        app:layout_constraintStart_toStartOf="@id/et_password_intro"
        app:layout_constraintTop_toTopOf="@id/et_password_intro" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login_intro"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/bg_rounded_orange_btn"
        android:fontFamily="@font/vazir_bold"
        android:padding="8dp"
        android:text="ورود"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password_intro" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register_intro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_rounded_white_orange_border_rectangle"
        android:fontFamily="@font/vazir_bold"
        android:padding="8dp"
        android:text="ثبت نام"
        android:textColor="@color/clinitickPurple"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/btn_login_intro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password_intro" />

</androidx.constraintlayout.widget.ConstraintLayout>